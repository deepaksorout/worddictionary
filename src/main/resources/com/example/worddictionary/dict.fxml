<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.worddictionary.DictController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <ImageView fitHeight="100.0" fitWidth="500.0" layoutX="0.0">
            <image>
                <Image url="@dictionary2.jpeg"/>
            </image>
        </ImageView>
        <Text layoutX="100.0" layoutY="110.0">Search</Text>
        <TextField fx:id="Search" layoutY="120.0" layoutX="100.0" minHeight="20.0" minWidth="100.0" promptText="search"></TextField>
        <Button layoutX="300" layoutY="120" minWidth="100.0" minHeight="20.0" text="Search" onMouseClicked="#SearchButton"></Button>

        <Text layoutY="190.0" layoutX="100.0">Add a new word</Text>
        <TextField fx:id="Add" layoutY="200.0" layoutX="100.0" minHeight="20.0" minWidth="100.0"  promptText="Add a new word"></TextField>
        <Button layoutX="300" layoutY="215" minWidth="100.0" minHeight="20.0"  text="Add" onMouseClicked="#Add"></Button>

        <TextField fx:id="meaning" layoutY="230.0" layoutX="100.0" minHeight="20.0" minWidth="100.0"  promptText="meaing"></TextField>


        <Text layoutY="300.0" layoutX="100.0">Find Meaning</Text>
        <TextField fx:id="Find" layoutY="310.0" layoutX="100.0" minHeight="20.0" minWidth="100.0"  promptText="find meaning of a word"></TextField>
        <Button layoutX="300" layoutY="310" minWidth="100.0" minHeight="20.0"  text="Find Meaning" onMouseClicked="#Find"></Button>

        <Button layoutY="380.0" layoutX="200.0" minHeight="20.0" minWidth="100.0" text="Remove All Data" onMouseClicked="#Remove"  ></Button>
    </children>

</AnchorPane>
